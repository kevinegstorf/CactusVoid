# Build the docker image with `npx nx docker-build scraper`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t scraper`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system scraper && \
          adduser --system -G scraper scraper

COPY dist/apps/scraper scraper/
RUN chown -R scraper:scraper .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix scraper --omit=dev -f install

CMD [ "node", "scraper" ]
